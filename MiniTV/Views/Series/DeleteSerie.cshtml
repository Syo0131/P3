@model Aplication.ViewModel.SeriesViewModel

<div class="container text-white mt-5">
    <h2 class="text-center mb-4">¿Estás seguro de que deseas eliminar esta serie?</h2>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="img-container text-center">
                <img src="@Model.PortadaUrl" alt="@Model.Titulo" class="img-fluid rounded shadow">
                <div class="img-overlay mt-3">
                    <p><strong>Título:</strong> @Model.Titulo</p>
                    <p><strong>Productora:</strong> @Model.NombreProductora</p>
                    <p><strong>Género:</strong> @Model.NombreGeneroPrimario@(string.IsNullOrEmpty(Model.NombreGeneroSecundario) ? "" : $", {Model.NombreGeneroSecundario}")</p>
                </div>
            </div>

            <form asp-controller="Series" asp-action="DeleteS" method="post">
                <input type="hidden" name="id" value="@Model.Id" />

                <div class="d-flex justify-content-between mt-4">
                    <a asp-controller="Series" asp-action="ListSerie" class="btn btn-secondary">Cancelar</a>
                    <button type="submit" class="btn btn-danger">Eliminar</button>
                </div>
            </form>
        </div>
    </div>
</div>
