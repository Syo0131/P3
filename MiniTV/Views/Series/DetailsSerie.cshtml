@model Aplication.ViewModel.SeriesViewModel;

@{
    ViewData["Title"] = "Detalles de la Serie";
}

<div class="container text-white mt-4">
    
    
    <div class="row">
        <div class="col-md-6 mt-5">
            <img src="@Model.PortadaUrl" class="img-fluid rounded shadow" alt="Portada de @Model.Titulo">
        </div>
        <div class="col-md-6">
            <h2 class="text-center mb-4"><strong>@Model.Titulo</strong></h2>
            <h4><strong>Productora:</strong> @Model.NombreProductora</h4>
            <h5><strong>Género:</strong> @Model.NombreGeneroPrimario @(Model.NombreGeneroSecundario != null ? $", {Model.NombreGeneroSecundario}" : "")</h5>
            <h3 class="mt-4">Tráiler</h3>
            <div class="ratio ratio-16x9">
                <iframe src="@Model.VideoURl" frameborder="0" allowfullscreen></iframe>
            </div>

            <div class="d-flex justify-content-between mt-3">
                <a asp-controller="Series" asp-action="ListSerie" class="btn btn-secondary">Volver a la Lista</a>

                <div>
                    <a asp-controller="Series" asp-action="EditS" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a>
                    <a asp-controller="Series" asp-action="DeleteS" asp-route-id="@Model.Id" class="btn btn-danger">Eliminar</a>
                </div>
            </div>

        </div>
    </div>
</div>
