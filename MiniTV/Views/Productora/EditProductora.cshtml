@model Aplication.ViewModel.ProductoraViewModel
@{
    ViewData["Title"] = "Editar Productora";
}
<div class="text-white container">
    <h2>Editar Género</h2>
    <form asp-action="EditP" asp-controller="Productora" method="post">
        <input type="hidden" asp-for="IdProductora" />

        <div class="mb-3">
            <label for="nombre" class="form-label">Nombre de la Productora</label>
            <input type="text" id="nombre" name="NombreProductora" class="form-control" value="@Model?.NombreProductora" required />
        </div>

        <button type="submit" class="btn btn-primary">Guardar Cambios</button>
        <a asp-action="ListProductora" asp-controller="Productora" class="btn btn-secondary">Cancelar</a>
    </form>

</div>