<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MiniTV</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MiniTV.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/navbar.css" asp-append-version="true" />
</head>
<body class="bg-dark">
    <header class="bg-black">
        <nav>
            <a asp-controller="Home" asp-action="HomeView"><h1 class="text-white">Gestor de series</h1></a>
            <ul>
                <li><a class="nav-link text-white" asp-controller="Home" asp-action="HomeView">Home</a></li>
                <li><a class="nav-link text-white" asp-controller="Series" asp-action="ListSerie">Mant. Series</a></li>
                <li><a class="nav-link text-white" asp-controller="Genero" asp-action="ListGenero">Mant. Generos</a></li>
                <li><a class="nav-link text-white" asp-controller="Productora" asp-action="ListProductora">Mant. Productoras</a></li>
            </ul>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @DateTime.Now.Year - MiniTV 
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
